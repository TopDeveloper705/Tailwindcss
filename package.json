{
  "name": "windicss",
  "version": "2.1.0",
  "description": "Next generation tailwindcss compiler.",
  "main": "index.js",
  "module": "index.mjs",
  "types": "index.d.ts",
  "bin": {
    "windicss": "cli/index.js"
  },
  "scripts": {
    "dev": "rollup -cw",
    "lint": "eslint . --ext .ts",
    "build": "rollup -c && tsc -p ./src --emitDeclarationOnly",
    "product": "PUBLISH=true npm run build",
    "release": "npm run lint && npm run product && npm run test",
    "test": "ts-node -O '{\"module\":\"commonjs\"}' node_modules/jasmine/bin/jasmine --config=jasmine.json'",
    "coverage": "nyc --nycrc-path=.nycrc.json npm run test"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./index.mjs",
      "require": "./index.js"
    },
    "./colors": {
      "import": "./colors.mjs",
      "require": "./colors.js"
    },
    "./cli": {
      "import": "./cli/index.mjs",
      "require": "./cli/index.js"
    },
    "./config": {
      "import": "./config/index.mjs",
      "require": "./config/index.js"
    },
    "./lib": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.js"
    },
    "./plugin": {
      "import": "./plugin/index.mjs",
      "require": "./plugin/index.js"
    },
    "./utils": {
      "import": "./utils/index.mjs",
      "require": "./utils/index.js"
    },
    "./utils/parser": {
      "import": "./utils/parser/index.mjs",
      "require": "./utils/parser/index.js"
    },
    "./utils/style": {
      "import": "./utils/style/index.mjs",
      "require": "./utils/style/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/voorjaar/windicss.git"
  },
  "keywords": [
    "tailwindcss",
    "css",
    "compiler"
  ],
  "engines": {
    "node": ">= 12"
  },
  "author": "Veritas Raven",
  "license": "MIT",
  "homepage": "https://github.com/voorjaar/windicss",
  "dependencies": {
    "arg": "^5.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-sucrase": "^3.1.0",
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/jasmine": "^3.6.3",
    "@types/node": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "jasmine": "^3.6.4",
    "jasmine-spec-reporter": "^6.0.0",
    "nyc": "^15.1.0",
    "rollup": "^2.37.0",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  }
}
